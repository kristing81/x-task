<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h4><%= @task.description %></h4>
      <h6>Assigned to: <%= link_to @team.name, team_path(@team)  %> </h6>
       <%= link_to "Edit Task", edit_task_path(@task), class: "btn btn-info btn-sm" %>
       <%= link_to "Delete Task", @task, method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: 'Are you sure you want to delete this task?'} %>
    </div>
  </div>
</div>
