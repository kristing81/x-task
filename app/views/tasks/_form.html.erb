 <%= form_for @task, class: 'form-horizontal', remote: true do |f| %>
   <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label "Assign to a team" %>
    <%= f.collection_select :team_id, Team.all, :id, :name, input_html: {class: "form-control", id: 'task_team_id'} %>
  </div>
   <%= f.submit "Save", class: "btn btn-success" %>
 <% end %>