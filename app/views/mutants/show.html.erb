<div class="container">
  <div class="row">
     <div class="col-md-10">
      <h4><%= @mutant.name %></h4>
      <h6>Member of <%= link_to @team.name, team_path(@team)  %> Team</h6>
      <%= link_to "Edit Mutant", edit_mutant_path(@mutant), class: "btn btn-info btn-sm" %>
      <%= link_to "Delete Mutant", @mutant, method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: 'Are you sure you want to delete this mutant?'} %>
    </div>
  </div>
</div>
