<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h4><%= @team.name %></h4>
      <h6>Current tasks</h6>
      <% @tasks.each do |task| %>
        <p><%= link_to task.description, task_path(task.id) %></p>
      <% end %>
        <h6>Current Team Members</h6>
        <% @mutants.each do |mutant| %>
          <p><%= link_to mutant.name, mutant_path(mutant.id) %></p>
        <% end %>
      <%= link_to "Edit Team", edit_team_path(@team), class: "btn btn-info btn-sm" %>
      <%= link_to "Delete Team", @team, method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: 'Are you sure you want to delete this team?'} %>
    </div>
  </div>
</div>